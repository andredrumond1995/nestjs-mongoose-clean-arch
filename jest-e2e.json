{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex":[".e2e-spec.ts$"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "disableSourceMapSupport": true
    }
  },
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "@users/(.*)": "<rootDir>/src/users/$1",
    "@shared/(.*)": "<rootDir>/src/shared/$1"
  }
}
